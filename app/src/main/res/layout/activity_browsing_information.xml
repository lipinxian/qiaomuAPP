<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_top"/>
    <TextView
        android:id="@+id/brows_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#e5e5f0">
    </TextView>
    <TextView
        android:id="@+id/brows"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:src="@mipmap/see"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp" />
        <TextView
            android:id="@+id/people_num"
            android:textColor="@color/Calendar_WeekFontColor"
            android:text=""
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <ImageView
                android:src="@mipmap/heart"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/heart_num"
                android:textColor="@color/Calendar_WeekFontColor"
                android:text=""
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />
            <ImageView
                android:src="@mipmap/comment"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/comment_num"
                android:textColor="@color/Calendar_WeekFontColor"
                android:text=""
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />
            <ImageView
                android:src="@mipmap/transpond"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/transpond_num"
                android:textColor="@color/Calendar_WeekFontColor"
                android:text=""
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
