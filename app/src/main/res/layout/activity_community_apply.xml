<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    android:orientation="vertical">
    <include layout="@layout/activity_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FDFC7F"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/linear_layout_boder">
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="150dp"
                android:minHeight="30dp"
                android:background="@drawable/singleline_item_bg"
                android:id="@+id/province_relative"
                >
                <TextView
                    android:hint="省份"
                    android:id="@+id/province_text"
                    style="@style/ourself_def_spinner_textView"
                    >
                </TextView>
                <ImageButton
                    android:id="@+id/province_relative_img"
                    style="@style/ourself_def_spinner_ImageButton" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/city_relative"
                android:layout_height="match_parent"
                android:layout_width="fill_parent"
                android:minHeight="30dp"
                android:background="@drawable/singleline_item_bg">
                <TextView
                    android:hint="城市"
                    android:id="@+id/city_text"
                    style="@style/ourself_def_spinner_textView"
                    >
                </TextView>
                <ImageButton
                    android:id="@+id/city_relative_img"
                    style="@style/ourself_def_spinner_ImageButton" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/search_community"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:layout_gravity="right">

        <EditText
            android:id="@+id/search_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="40dp"
            android:layout_centerVertical="true"
            android:hint="请输入社区名称"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp">
        </EditText>
        <ImageView
            android:id="@+id/search_img"
            android:layout_width="70px"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/search"
            android:layout_marginTop="5dp" />
    </RelativeLayout>
    <com.arborcommunity.view.LoadListView
        android:id="@+id/community_List"
        android:layout_width="match_parent"
        android:listSelector="@color/select"
        android:layout_weight="9"
        android:layout_height="0dp">
    </com.arborcommunity.view.LoadListView>
</LinearLayout>
