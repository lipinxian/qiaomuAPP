<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/functionKey"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/policyNotice"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/repairs"
                    android:id="@+id/imageView7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修申请"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/homeworkDiscuss"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/discuss"
                    android:id="@+id/imageView9" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家事讨论"
                    android:textSize="20dp"
                    android:id="@+id/textView6" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/exposure"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/property_pay_cost"
                    android:id="@+id/imageView10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物业缴费"
                    android:textSize="20dp"
                    android:id="@+id/textView7" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/shareInformation"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/park"
                    android:id="@+id/imageView11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车位租赁"
                    android:textSize="20dp"
                    android:id="@+id/textView8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/advertis"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/advertis"
                    android:id="@+id/imageView12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="闲置分享"
                    android:textSize="20dp"
                    android:id="@+id/textView9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/public_spirited"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/public_spirited"
                    android:id="@+id/imageView13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公益银行"
                    android:textSize="20dp"
                    android:id="@+id/textView10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
      android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/vertical_mould"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="近期热点"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:autoText="false"
            android:gravity="center_vertical"
            android:textIsSelectable="false"
            android:textColor="@color/abc_input_method_navigation_guard" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:id="@+id/realitimeMessageListView"/>

</LinearLayout>
