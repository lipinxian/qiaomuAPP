<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--新增社区成员-->
    <include layout="@layout/activity_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.00"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/linear_layout_boder"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="108dp"
                android:text="社区名称:"
                style="@style/relativeLayoutText"
                android:id="@+id/textView12" />
            <EditText
                android:id="@+id/add_member_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="-2dp"
                android:textSize="18dp"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/linear_layout_boder"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="108dp"
                android:text="角        色:"
                style="@style/relativeLayoutText"
                android:id="@+id/textView13" />
            <RelativeLayout
                android:layout_toRightOf="@+id/textView13"
                style="@style/ourself_def_spinner_RelativeLayout">
                <TextView
                    android:id="@+id/role_type"
                    style="@style/ourself_def_spinner_textView"
                    >
                </TextView>
                <ImageButton
                    style="@style/ourself_def_spinner_ImageButton" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/linear_layout_boder"
        android:layout_marginTop="3dp">
            <TextView
                android:layout_width="108dp"
                android:text="姓        名:"
                style="@style/relativeLayoutText"
                android:id="@+id/textView14" />
            <EditText
                android:id="@+id/realityName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="-2dp"
                android:textSize="13dip"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/linear_layout_boder"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="108dp"
                android:text="详细地址:"
                style="@style/relativeLayoutText"
                android:id="@+id/textView15" />
            <EditText
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:layout_toRightOf="@+id/textView15"
                android:layout_toEndOf="@+id/textView15"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="-2dp"
                android:textSize="13dip"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/linear_layout_boder"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="108dp"
                android:text="证件号码:"
                style="@style/relativeLayoutText"
                android:id="@+id/textView17" />
            <EditText
                android:id="@+id/identityInfo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip"
                android:layout_toRightOf="@+id/textView17"
                android:layout_toEndOf="@+id/textView17"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="-2dp"
                android:textSize="13dip"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/identity_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="108dp"
                android:text="证件照片:"
                style="@style/relativeLayoutText"
                android:id="@+id/textView16" />
            <android.support.v7.widget.RecyclerView
                android:layout_toRightOf="@+id/textView16"
                android:layout_toEndOf="@+id/textView16"
                android:id="@+id/identityImg"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/identityImg"
                android:layout_toEndOf="@+id/identityImg"
                android:text="(身份证、手持身份证清晰照片、房产证照片)"
                android:textColor="#72f332"
                android:textSize="12dp"
                android:layout_marginTop="20dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示：请正确填写姓名，管理员在三个工作日内完成审核，若名称错误，则影响审核结果。审核结果以短信通知，若超过该时间，请联系管理员"
            android:textColor="#72f332"
            android:textSize="12dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="提交审核"
        android:id="@+id/add_community_button"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape"
        android:layout_marginTop="10dp" />
</LinearLayout>
